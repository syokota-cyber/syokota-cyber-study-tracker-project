[flake8]
# Maximum line length
max-line-length = 88

# Maximum complexity for functions
max-complexity = 10

# Ignore specific error codes
ignore = E203,E501,W503,F401,F403

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    build,
    dist,
    *.egg-info,
    htmlcov,
    .coverage,
    coverage.xml

# Include specific directories
include = src/, tests/

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True

# Exit with error code 0 even if errors are found
exit-zero = False

# Format for output
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s 